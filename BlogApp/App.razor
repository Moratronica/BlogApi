<Router AppAssembly="@typeof(App).Assembly">

    <Found Context="routeData">
        <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">        
            <Authorizing>
                <p>Por favor, espere mientras autorizamos el usuario</p>
            </Authorizing>
            <NotAuthorized>
                <BlogApp.Pages.Autentication.RedireccionarAlAcceso></BlogApp.Pages.Autentication.RedireccionarAlAcceso>
            </NotAuthorized>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <CascadingAuthenticationState>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Error, no hay nada en esta dirección</p>
            </LayoutView>
        </CascadingAuthenticationState>
    </NotFound>

